<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:id="@+id/background">
    <RelativeLayout android:layout_centerVertical="true"
        android:paddingLeft="4dp" android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/order_name_label"
            android:text="Wertpapier: "
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textStyle="bold" android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_marginLeft="4dip"></TextView>
        <TextView android:id="@+id/order_name"
            android:text="Name Value"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:textColor="#777777"
             android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_toRightOf="@+id/order_name_label" android:layout_marginLeft="4dip"></TextView>

        <TextView android:id="@+id/order_type_label"
            android:text="Typ: "
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textStyle="bold" android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_marginLeft="4dip" android:layout_below="@id/order_name_label"></TextView>
        <TextView android:id="@+id/order_type"
            android:text="Typ Value"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_toRightOf="@+id/order_name_label" android:layout_marginLeft="4dip" android:layout_below="@id/order_name_label"></TextView>


        <TextView android:id="@+id/order_status_label"
            android:text="Status: "
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textStyle="bold" android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_marginLeft="4dip" android:layout_below="@id/order_type_label"></TextView>
        <TextView android:id="@+id/order_status"
            android:text="Status Value"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_toRightOf="@+id/order_name_label" android:layout_marginLeft="4dip" android:layout_below="@id/order_type_label"></TextView>

        <TextView android:id="@+id/order_value_label"
            android:text="Wert: "
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textStyle="bold" android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_marginLeft="4dip" android:layout_below="@id/order_status_label"></TextView>
        <TextView android:id="@+id/order_value"
            android:text="Wert Value"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_toRightOf="@+id/order_name_label" android:layout_marginLeft="4dip" android:layout_below="@id/order_status_label"></TextView>

        <TextView android:id="@+id/order_count_label"
            android:text="Stück: "
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textStyle="bold" android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_marginLeft="4dip" android:layout_below="@id/order_value_label"></TextView>
        <TextView android:id="@+id/order_count"
            android:text="Stück Value"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_toRightOf="@+id/order_name_label" android:layout_marginLeft="4dip" android:layout_below="@id/order_value_label"></TextView>


    </RelativeLayout>

</RelativeLayout>