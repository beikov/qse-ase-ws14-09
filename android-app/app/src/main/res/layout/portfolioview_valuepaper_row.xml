<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:id="@+id/background">
    <RelativeLayout android:layout_centerVertical="true"
        android:paddingLeft="4dp" android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/einzeltitel_name_label"
            android:text="Titel: "
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textStyle="bold" android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_marginLeft="4dip"></TextView>
        <TextView android:id="@+id/order_name"
            android:text="Name Value"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:textColor="#777777"
             android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_toRightOf="@+id/einzeltitel_gewinn_label" android:layout_marginLeft="4dip"></TextView>

        <TextView android:id="@+id/einzeltitel_count_label"
            android:text="Stückzahl: "
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textStyle="bold" android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_marginLeft="4dip" android:layout_below="@id/einzeltitel_name_label"></TextView>
        <TextView android:id="@+id/order_type"
            android:text="Stückzahl Value"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_toRightOf="@+id/einzeltitel_gewinn_label" android:layout_marginLeft="4dip" android:layout_below="@id/einzeltitel_name_label"></TextView>


        <TextView android:id="@+id/einzeltitel_verlauf_label"
            android:text="Kursverlauf: "
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textStyle="bold" android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_marginLeft="4dip" android:layout_below="@id/einzeltitel_count_label"></TextView>
        <TextView android:id="@+id/order_status"
            android:text="Verlauf Value"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_toRightOf="@+id/einzeltitel_gewinn_label" android:layout_marginLeft="4dip" android:layout_below="@id/einzeltitel_count_label"></TextView>

        <TextView android:id="@+id/einzeltitel_gewinn_label"
            android:text="Gewinn/Verlust: "
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textStyle="bold" android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_marginLeft="4dip" android:layout_below="@id/einzeltitel_verlauf_label"></TextView>
        <TextView android:id="@+id/order_value"
            android:text="Gewinn Value"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="#777777"
            android:shadowRadius="0.5"
            android:shadowDx="0" android:shadowDy="0" android:layout_toRightOf="@+id/einzeltitel_gewinn_label" android:layout_marginLeft="4dip" android:layout_below="@id/einzeltitel_verlauf_label"></TextView>


    </RelativeLayout>

</RelativeLayout>